<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maye.jnitest.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Service" />
        <TextView
            android:id="@+id/time_duration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Time Duration: "/>
        <TextView
            android:id="@+id/speed_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Speed: "/>
        <TextView
            android:id="@+id/send_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Send: "/>
        <TextView
            android:id="@+id/receive_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Receive: "/>
        <TextView
            android:id="@+id/ipv4_addr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="IPv4 Address: "/>
        <TextView
            android:id="@+id/ipv6_addr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="IPv6 Address: "/>
    </LinearLayout>
</RelativeLayout>
